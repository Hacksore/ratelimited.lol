---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
  <main class="flex">
    <div
      class="flex flex-col border-r p-4 w-96 h-screen gap-4 border-neutral-800"
    >
      <svg
        role="img"
        fill="#fff"
        class="h-10 w-10 mx-4"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
        ><title>Twitter</title><path
          d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
        ></path></svg
      >
      <div
        class="p-4 flex gap-4 hover:bg-neutral-500 hover:bg-opacity-25 rounded-full font-bold items-center cursor-pointer text-xl"
      >
        <svg viewBox="0 0 24 24" aria-hidden="true" class="h-10 w-10 fill-white"
          ><g
            ><path
              d="M12 1.696L.622 8.807l1.06 1.696L3 9.679V19.5C3 20.881 4.119 22 5.5 22h13c1.381 0 2.5-1.119 2.5-2.5V9.679l1.318.824 1.06-1.696L12 1.696zM12 16.5c-1.933 0-3.5-1.567-3.5-3.5s1.567-3.5 3.5-3.5 3.5 1.567 3.5 3.5-1.567 3.5-3.5 3.5z"
            ></path></g
          ></svg
        >
        Home
      </div>
    </div>
    <div
      id="container"
      class="relative w-[30vw] grid place-items-center h-screen text-neutral-400"
    >
      <div class="-mt-32">Something went wrong. Try reloading.</div>
      <button
        id="whatever"
        class="bg-[#1DA1F2] top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 absolute duration-300 pr-5 p-4 font-bold text-xl flex items-center text-white gap-4 rounded-full"
      >
        <svg viewBox="0 0 24 24" aria-hidden="true" class="fill-white h-8 w-8"
          ><g
            ><path
              d="M12 4c-4.418 0-8 3.58-8 8s3.582 8 8 8c3.806 0 6.993-2.66 7.802-6.22l1.95.44C20.742 18.67 16.76 22 12 22 6.477 22 2 17.52 2 12S6.477 2 12 2c3.272 0 6.176 1.57 8 4V3.5h2v6h-6v-2h2.616C17.175 5.39 14.749 4 12 4z"
            ></path></g
          ></svg
        >
        Retry
      </button>
    </div>
    <div
      class="flex flex-col border-l p-4 w-96 h-screen gap-4 border-neutral-800"
    >
      <div
        class="p-4 bg-neutral-800 text-neutral-400 rounded-full text-xl w-full flex gap-8"
      >
        <svg
          viewBox="0 0 24 24"
          aria-hidden="true"
          class="w-8 h-8 fill-neutral-400"
          ><g
            ><path
              d="M10.25 3.75c-3.59 0-6.5 2.91-6.5 6.5s2.91 6.5 6.5 6.5c1.795 0 3.419-.726 4.596-1.904 1.178-1.177 1.904-2.801 1.904-4.596 0-3.59-2.91-6.5-6.5-6.5zm-8.5 6.5c0-4.694 3.806-8.5 8.5-8.5s8.5 3.806 8.5 8.5c0 1.986-.682 3.815-1.824 5.262l4.781 4.781-1.414 1.414-4.781-4.781c-1.447 1.142-3.276 1.824-5.262 1.824-4.694 0-8.5-3.806-8.5-8.5z"
            ></path></g
          ></svg
        ><span>Search Twitter</span>
      </div>
      <div class="rounded-2xl bg-neutral-800 p-4">
        <h1 class="text-2xl font-bold mb-4">Who to follow</h1>
        <div class="flex gap-4">
          <div
            class="rounded-full bg-contain bg-[url('https://pbs.twimg.com/profile_images/1590968738358079488/IY9Gx6Ok_400x400.jpg')] w-12 h-12"
          >
          </div>
          <div class="flex flex-col">
            <div class="text-xl font-bold">Elon Musk</div>
            <div class="text-neutral-400">@elonmusk</div>
          </div>
        </div>
      </div>
      <div class="text-neutral-400">Â© 2069 ratelimited Corp.</div>
    </div>
  </main>
</Layout>

<script is:inline>
  const c = document.querySelector("#container");
  const b = document.querySelector("#whatever");
  const b2 = document.getElementById("whatever");
  const { width: cWidth, height: cHeight } = c.getBoundingClientRect();
  const { width: bWidth, height: bHeight } = b.getBoundingClientRect();

  function move() {
    const i = Math.floor(Math.random() * (cWidth - bWidth)) + 1;
    const j = Math.floor(Math.random() * (cHeight - bHeight)) + 1;
    b2.style.left = i + "px";
    b2.style.top = j + "px";
  }
  b.addEventListener("mouseenter", () => move());
</script>
